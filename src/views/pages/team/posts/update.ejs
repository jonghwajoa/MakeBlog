<!DOCTYPE html>
<html lang="ko">
  <head>
    <title>WeKnowJS</title>
    <meta charset="UTF-8" />
    <meta name="author" content="JongHwa" />
    <meta name="description" content="JONGHWA BLOG" />
    <meta name="generator" content="Visual Studio Code" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="robots" content="noindex,nofollow" />
    <% include ../../../partials/essentialCss.ejs %>
    <link rel="stylesheet" href="/css/posts/write.css" />
  </head>

  <body>
    <% include ../../../partials/headerTeam.ejs %> <% include ../../../partials/editorWrite.ejs %>

    <div class="wrap">
      <!-- container -->
      <div class="container">
        <div class="title">
          <input type="text" id="title" name="title" value="<%= post.title %>" />
        </div>

        <!-- tags -->
        <div class="tag-container">
          <div class="tag-add">
            <label for="category-add">태그 추가</label>
            <input type="text" class="category-input" id="tagAddName" />
            <button id="tagAddBtn">추가</button>
          </div>
          <div class="tag" id="tag">
            <% post.Tags.forEach(e => { %>
            <input type="hidden" class="hiddenTag" value="<%= e.name%>" />
            <% }) %>
          </div>
        </div>
        <!-- //tags -->

        <!-- editsection -->
        <div id="content-content" name="content">
          <input type="hidden" id="content-hidden" value="<%= post.content %>" />
        </div>
        <!-- //editsection -->

        <button class="custom">뒤로가기</button>
        <button class="custom" onclick="post.update('<%=post.no%>')">수정하기</button>
      </div>
      <!-- //container -->
      <div class="moveTop-btn" id="moveTop-btn">&#x2912;</div>
    </div>

    <% include ../../../partials/footer.ejs %>
    <script src="/js/nav/nav.js"></script>
    <script src="/js/util/ajaxUtil.js"></script>
    <script src="/js/posts/posts.js"></script>
    <script>
      post.updateInit();
    </script>
  </body>
</html>
