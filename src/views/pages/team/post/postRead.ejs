<!DOCTYPE html>
<html lang="ko">

<head>
    <title>WeKnowJS</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <% include ../../../partials/team/essentialCss.ejs %>
    <link rel='stylesheet' href='/css/common/postRead.css' />
    <% include ../../../partials/editorViewer.ejs %>
    <script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>
    <link rel='stylesheet' href='/css/team/header.css' />

</head>

<body>
    <% include ../../../partials/team/header.ejs %>


    <article class="post">
        <section class='title'>
            <div class='intro'>
                <h1>
                    <%= post.title %>
                </h1>
                <dl class='postInfo'>
                    <dt>
                    <dd>
                        <%= post.created_at %> |
                    </dd>
                    </dt>
                    <dt>
                    <dd>
                        View
                        <%= post.count %>
                    </dd>
                    </dt>
                </dl>
            </div>

            <div class="manageArea">
            <a href='/post/<%= post.no%>/edit'>
                    <input type="button" value='수정하기' id='update' />
                </a>
                <input type="button" value='삭제하기' id='delete' onclick="postRead.deletePost('<%= post.no%>')" />
            </div>
        </section>


        <section class='content'>
            <div id="content">
                    <input type="hidden" id="postContent" value="<%= post.content %>" />
            </div>
            <div class="side">
                <div class='sidepost'>
                    <div class='sideTop'>
                        <h2>Sub post</h2>
                    </div>

                    <div class='subpost'>
                        <a href='/post/<%=post.no%>'>Home</a>
                        <% subPost.forEach((item,index) => { %>
                        <a href='/post/<%=post.no%>/<%=item.sub_no %>'>
                            <%=item.title %></a>
                        <% }) %>
                    </div>
                </div>

                <div class='subPostAdd'>
                    <a href="/post/<%=post.no%>/new">
                        <input type="button" value='add subPage' />
                    </a>

                </div>
            </div>

        </section>


        <section>
            <div id="disqus_thread"></div>
        </section>
    </article>


    <% include ../../../partials/footer.ejs %>

    <noscript>Please enable JavaScript</noscript>
    <script src="/js/util/ajaxUtil.js"></script>
    <script src="/js/post/postRead.js"></script>
    <script>
        window.onload = function () {
            const disqus_config = function () {
                this.page.url = '/post/<%=post.no%>';  // Replace PAGE_URL with your page's canonical URL variable
                this.page.identifier = `<%=post.no%>`; // Replace PAGE_IDENTIFIER with your page's unique identifier variable
            };

            (function () { // DON'T EDIT BELOW THIS LINE
                var d = document, s = d.createElement('script');
                s.src = 'https://weknowjs-xyz.disqus.com/embed.js';
                s.setAttribute('data-timestamp', +new Date());
                (d.head || d.body).appendChild(s);
            })();
        }
    </script>


</body>

</html>