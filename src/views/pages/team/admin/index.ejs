  <body>
    <% include ../../../partials/headerTeam.ejs %>

    <div class="wrap">
      <aside>
        <ul>
          <li><a href="/admin">방문자</a></li>
          <li><a href="/admin/error">에러로그</a></li>
        </ul>
      </aside>

      <article>
        <section class="inner-nav">
          <h2>월별 방문자 보기</h2>
          <select id="daily-year">
            <option value="2018">2018</option>
            <option value="2019">2019</option>
          </select>

          <select id="daily-month">
            <% for(let i=1; i<=12; i++) { %>
            <option value="<%=i%>"><%=i%></option>
            <% } %>
          </select>
          <input type="button" value="보기" id="daily-search-btn" />
        </section>

        <section class="content">
          <canvas id="daily-chart" width="500" height="400">
            Your browser does not support the canvas element.
          </canvas>
        </section>
      </article>

      <article>
        <section class="inner-nav">
          <h2>년별 방문자 보기</h2>
          <select id="monthly-year">
            <option value="2018">2018</option>
            <option value="2019">2019</option>
          </select>
          <input type="button" value="보기" id="monthly-search-btn" />
        </section>

        <section class="content">
          <canvas id="monthly-chart" width="500" height="400">
            Your browser does not support the canvas element.
          </canvas>
        </section>
      </article>
    </div>

    <script src="/js/nav/nav.js"></script>
    <script src="/dist/Chart.min.js"></script>
    <script src="/js/util/ajaxUtil.js"></script>
    <script src="/js/util/colorUtil.js"></script>
    <script src="/js/admin/admin.js"></script>
    <link rel="stylesheet" type="text/css" href="/dist/Chart.min.css" />
  </body>
</html>
